---
export interface Props {
  date: string;
  position: string;
  company: string;
  companyLink: string;
  description: string;
  techStack: string[];
  hoverColor?: string;
}

const { date, position, company, companyLink, description, techStack, hoverColor = '#5eead4' } = Astro.props;
---

<a href={companyLink} target="_blank" class="experience-card" style={`--hover-color: ${hoverColor};`}>
  <div class="card-content">
    <span class="date">{date}</span>
    <div class="card-main">
      <div class="card-header">
        <h3>
          {position} · 
          <span class="company-name" style={`--hover-color: ${hoverColor};`}>
            {company}
          </span>
          <span class="arrow">↗</span>
        </h3>
      </div>
      <p class="card-description">{description}</p>
      <div class="tech-stack">
        {techStack.map((tech) => (
          <span class="tech-tag">{tech}</span>
        ))}
      </div>
    </div>
  </div>
</a>

<style>
.experience-card {
  display: block; /* Make it behave like a block-level element */
  text-decoration: none; /* Remove default link underline */
  color: inherit; /* Ensure text inherits color */
  padding: 2rem;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.experience-card:hover {
  background: rgba(255, 255, 255, 0.05);
}

.experience-card:hover .card-header h3 {
  color: #5eead4;
}

.company-name {
  color: inherit;
  transition: color 0.3s ease;
}

.experience-card:hover .company-name {
  color: var(--hover-color); /* Apply custom hover color */
}

.arrow {
  display: inline-block;
  transition: transform 0.3s ease, color 0.3s ease;
  color: inherit;
}

.experience-card:hover .arrow {
  transform: translate(4px, -4px); /* Moves up and to the right */
  color: var(--hover-color); 
}

.card-content {
  display: grid;
  grid-template-columns: 120px 1fr;
  gap: 2rem;
}

.date {
  font-size: 0.85rem;
  color: var(--text-color);
  opacity: 0.7;
}

.card-main {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.card-header h3 {
  font-size: 1rem;
  font-weight: 500;
  color: var(--highlight-color);
  margin: 0;
}

.card-description {
  font-size: 0.85rem;
  line-height: 1.6;
  color: var(--text-color);
  margin: 0;
}

.tech-stack {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-top: 0.5rem;
}

.tech-tag {
  font-family: 'Inter', sans-serif;
  font-size: 0.75rem;
  color: #5eead4;
  background: rgba(94, 234, 212, 0.1);
  padding: 0.25rem 0.75rem;
  border-radius: 9999px;
}
</style>
